<nav role="navigation" class="Navigation hide-scrollbar">
    <ul class="flex nav-mobile-scroller align-center">
        <button class="mobile-nav-btn">
            <span></span>
        </button>
        <a class="mx-auto easytrader-mobile-link display-none" href="#">
            <img src="{{ theme.link }}/dist/images/easytrader-menu-mobile.svg" />
        </a>
        {% for item in header_menu.items %}
            <li class="ml-5 {{ item.classes|join(' ') }}">
                <a href="{{ item.link }}">{{ item.title }}</a>
                {% if item.children %}
                    <ul class="overflow-hidden">
                        {% for child in item.children %}
                            <li>
                                <a class="flex align-center radius-small" href="{{ child.link }}">
                                    <img src="{{ Image(child.meta('submenu-icon')).src }}" />
                                    <div class="content flex-column">
                                        <span class="title t-14 text-darker mb-1">{{ child.title }}</span>
                                        <span class="caption t-12 text-lighter">
                                            {{ child.meta('submenu-caption') }}
                                        </span>
                                    </div>
                                </a>
                                {% if child.children %}
                                    <ul class="footer flex wrap py-3">
                                        {% for footerLink in child.children %}
                                            <li class="flex-column">
                                                <a class="t-12 text-darker px-4 py-2" href="{{ footerLink.link }}">{{ footerLink.title }}</a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</nav>
